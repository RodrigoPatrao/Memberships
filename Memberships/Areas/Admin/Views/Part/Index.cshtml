@model IEnumerable<Memberships.Entities.Part>
@using Memberships.Areas.Admin.Models

@{
    ViewBag.Title = "Index";
}

<h2>Index - Parts</h2>

<p>
    @Html.Partial("_CreateNewButtonPartial")
</p>
<table class="table">
    <tr class="bg-success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td class="col-sm-2" style="text-align: right">
            @Html.Partial("_TableButtonsGroupPartial", new SmallButtonModel { Id = item.Id })
        </td>
    </tr>
}

</table>
